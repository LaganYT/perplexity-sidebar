{
  "manifest_version": 3,
  "name": "Perplexity Sidebar",
  "version": "1.0",
  "description": "Open Perplexity in a Chrome sidebar",
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.perplexity.ai/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": {
      "48": "icons/icon48.png"
    },
    "default_title": "Open Perplexity Sidebar"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "declarativeNetRequest",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "https://www.perplexity.ai/*",
    "https://pplx-next-static-public.perplexity.ai/*",
    "https://perplexity-ai.cloudflareaccess.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}